<%# This page is for editing of registration. %>
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%# Form start. %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<%# Email field. %>
  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

<%# Waiting confirmation. %>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

<%# password file. %>
  <div class="field">
    <%= f.label :password %> <i>(Left empty, if not want to change)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <%# Password min length %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

<%# Password confirmation. %>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <%# Old passwor.d %>

  <div class="field">
    <%= f.label :current_password %> <i>(Type old password)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

<%# Submit button. %>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Remove account</h3>
<p>Have Complain? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
<%= link_to "Back", :back %>
